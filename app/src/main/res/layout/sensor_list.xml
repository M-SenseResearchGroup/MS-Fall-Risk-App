<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/sensor_list"
    android:longClickable="true"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/status_mac_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:text="TextView"
            android:textColor="@color/Navy"
            android:textSize="20sp" />


        <Button
            android:id="@+id/vib_button"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/xVal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="48dp"
            android:onClick="myClickHandler"
            android:text="Vibrate" />

        <TextView
            android:id="@+id/text_connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vib_button"
            android:layout_marginTop="5dp"
            android:text="Connecting . . ."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ProgressBar
            android:id="@+id/connecting_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_connecting"
            android:layout_marginTop="2dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/xVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_mac_address"
            android:text="TextView" />

        <TextView
            android:id="@+id/yVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_below="@id/status_mac_address"
            android:text="TextView" />

        <TextView
            android:id="@+id/zVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/status_mac_address"
            android:layout_marginStart="100dp"
            android:text="TextView" />

    </RelativeLayout>
</LinearLayout>