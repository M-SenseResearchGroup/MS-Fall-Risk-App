<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/sensor_list"
    android:longClickable="true"

    >


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
>

    <TextView
        android:id="@+id/status_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:layout_centerInParent="true"
        android:textColor="@color/Navy"
        />

<TextView
    android:id="@+id/status_mac_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/status_device_name"
    android:textSize="20sp"
    android:layout_marginTop="8dp"
    android:text="TextView"
    android:layout_centerInParent="true"
    android:textColor="@color/Navy"
    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:gravity="center"
    android:id="@+id/accelValue"
    android:layout_below="@+id/status_mac_address"
    android:layout_marginTop="8dp"
    android:layout_centerInParent="true"/>

<Button
    android:id="@+id/start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/accelValue"
    android:layout_marginTop="8dp"
    android:text="Start"
    />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelValue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/start"
        android:text="Stop"
        />


<Button
    android:id="@+id/vib_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/accelValue"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_toEndOf="@+id/stop"
    android:text="Vibrate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Connecting . . ."
        android:layout_below="@+id/stop"
        android:id="@+id/text_connecting"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connecting_progress"
        android:layout_below="@+id/text_connecting"
        android:indeterminate="true"/>

</RelativeLayout>
</LinearLayout>